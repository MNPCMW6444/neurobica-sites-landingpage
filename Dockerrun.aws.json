{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "lukondefmwila/dkr-multicontainer-app-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "server"],
      "memory": 100
    },
    {
      "name": "client",
      "image": "lukondefmwila/dkr-multicontainer-app-client",
      "hostname": "client",
      "essential": true,
      "memory": 300
    },
    {
      "name": "server",
      "image": "lukondefmwila/dkr-multicontainer-app-server",
      "hostname": "server",
      "essential": true,
      "memory": 300
    }
  ]
}
